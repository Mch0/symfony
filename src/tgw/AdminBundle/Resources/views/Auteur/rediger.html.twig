{% extends "tgwAdminBundle::theme.html.twig" %}


{% block content %}

<div class="col-lg-10 page-header">
    <h1>Création d'un auteur</h1>
</div>
    <div class="col-lg-10">

     {% if auteur == null %}
<form action="{{ path('tgw_admin_creer_auteur') }}" method="post" class="form-horizontal">
    <div class="form-group">
        <label for="nom" class="control-label col-lg-1">Nom </label>
        <div class="col-lg-3">
            <input name="nom" id="nom" type="text"  class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label for="prenom" class="control-label col-lg-1">Prénom </label>
        <div class="col-lg-3">
            <input name="prenom" id="prenom" type="text"  class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label for="nom" class="control-label col-lg-1">Email </label>
        <div class="col-lg-3">
            <input name="email" id="email" type="email"  class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label for="signature" class="control-label col-lg-1">Signature </label>
        <div class="col-lg-5">
            <textarea name="signature" id="signature" class="form-control" rows="10"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-2 col-lg-offset-2">
            <input type="submit" class="btn btn-primary" valuer="Enregister" />
        </div>
    </div>
</form>
        {% else %}
        <form action="{{ path('tgw_admin_update_auteur')}}" method="post" class="form-horizontal">
            <div class="form-group">
                <label for="nom" class="control-label col-lg-1">Nom </label>
                <div class="col-lg-3">
                    <input name="nom" id="nom" type="text" value="{{ auteur.getNom }}" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label for="prenom" class="control-label col-lg-1">Prénom </label>
                <div class="col-lg-3">
                    <input name="prenom" id="prenom" type="text" value="{{ auteur.getPrenom }}"  class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label for="nom" class="control-label col-lg-1">Email </label>
                <div class="col-lg-3">
                    <input name="email" id="email" type="email" value="{{ auteur.getEmail }}" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label for="signature" class="control-label col-lg-1">Signature </label>
                <div class="col-lg-5">
                    <textarea name="signature" id="signature" class="form-control" rows="10">{{ auteur.getSignature }}</textarea>
                </div>
            </div>
            <input type="hidden" name="id" id="id" value="{{ auteur.getId }}" />
            <div class="form-group">
                <div class="col-lg-2 col-lg-offset-2">
                    <input type="submit" class="btn btn-primary" valuer="Enregister" />
                </div>
            </div>
        </form>
            {% endif %}
</div>
 {% endblock %}