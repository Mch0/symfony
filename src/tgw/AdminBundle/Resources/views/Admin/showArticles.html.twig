{% extends "tgwAdminBundle::theme.html.twig" %}


{% block content %}
    <div class="container-fluid">

            <div class="col-lg-10">
                <h1>Welcome to les articles</h1>
            </div>

        <a href="{{ path('tgw_admin_rediger') }}">Nouvel article</a>
            <div class="col-lg-10">
            {% for article in articles %}
                {{ article.getArticleTitre }} | {{ article.getArticleAuteur }} | {{ article.getArticleDate|date("d/m/Y H:i:s") }}
                | <a href="{{ path('blog_article_show', { 'id': article.getId }) }}">voir</a>
                | <a href="{{ path('tgw_admin_supprimer_article', { 'id': article.getId }) }}">supprimer</a>
                | <a href="{{ path('tgw_admin_editer_article', {'id': article.getId}) }}">éditer</a>
                {% if article.getArticlePublie == 0 %}
                | <a href="{{ path('tgw_admin_publier_article', {'id': article.getId}) }}">Publier</a>
                    {% else %}
                    | <a href="{{ path('tgw_admin_depublier_article', {'id': article.getId}) }}">Dépublier</a>
                {% endif %}

                </br>
            {% endfor %}
            </div>
    </div>
{% endblock %}
