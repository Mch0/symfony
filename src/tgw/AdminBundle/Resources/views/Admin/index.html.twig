{% extends "tgwAdminBundle::theme.html.twig" %}

{% block title %}tgwAdminBundle:Admin:index{% endblock %}
    {% block content %}
        {% if app.session.get('popin') == 1 %}
            <div style="height: 30px;width: 300px;color: red">
                Oups ! Il semblerait que les informations de connexion ne soient pas les bonnes
            </div>
        {% endif %}

        <div class="container-fluid">
            <div class="row col-lg-9 col-lg-offset-3 form-connexion">
                <h1><img class="lock-closed-icon col-lg-offset-2" src="{{ asset('bundles/tgw/image/icons/lock-closed.png') }}" /> Admin panel</h1>
                <form method="POST" class="form-horizontal" action="{{ path('login_check') }}">
                    <div class="form-group">
                        <label class="control-label col-lg-2" for="login" > LOGIN </label>
                        <div class="col-lg-3">
                            <input type="text" class="form-control" name="_username" placeholder="Login" id="login" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-2" for="password"> PASSWORD </label>
                        <div class="col-lg-3">
                            <input type="password" class="form-control" name="_password" placeholder="Mot de passe" id="password">
                        </div>
                    </div>
                    <div class="col-lg-offset-3">
                        <button type="submit" class="btn btn-primary" >Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    {% endblock %}