{%  extends "tgwBlogBundle::header.html.twig" %}


{% block content %}
<article>
    <div class="row">
        <div class="col-lg-8">
            <div class="post col-lg-12">
                <h2>{{ article.getArticleTitre }}</h2>
                <p class="post-content-meta">
                        <span class="post-tags">
                            <a href="#">
                                <span class="label label-info">{{ article.getArticleCategorie().getTitre() }}</span>
                            </a>
                        </span>
                    <span class="post-author"> // <i class="icon-user"></i> <a href="#">{{ article.getArticleAuteur().getPrenom() }}</a></span>
                    <span class="post-date"> // <i class="icon-calendar"></i>{{ article.getArticleDate()|date("d M \\a\\ H\\hm")  }}</span>
                </p>
                <hr/>
                <p>{{ article.getArticleContenu|raw }}</p>
            </div>
        </div>
	<div class="col-lg-4">
		<div class="pub-horizontal-large">
		<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<!-- paver 300*600 -->
<ins class="adsbygoogle"
     style="display:inline-block;width:300px;height:600px"
     data-ad-client="ca-pub-7834544252021991"
     data-ad-slot="1626815062"></ins>
<script>
(adsbygoogle = window.adsbygoogle || []).push({});
</script>
</div>
	</div> 
    </div>
    <hr/>
    <div class="row">
        <div class="col-lg-10">
            <div class="post col-lg-10">
                <p>{{ article.getArticleAuteur.getSignature()|raw }}</p>
            </div>
        </div>
    </div>
</article>
{% endblock %}
