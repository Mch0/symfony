{% extends "tgwBlogBundle::header.html.twig" %}


{% block content %}
    <!-- Carousel -->
<div class="row" id="carousel">
<div class="col-lg-12 ">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item">
                <img src="{{ asset('bundles/upload/slider/first.png') }}" alt="second"/>
            </div>
            <div class="item active">
                <img src="{{ asset('bundles/upload/slider/second.jpg') }}" alt="second"/>
            </div>
            <div class="item">
                <img src="{{ asset('bundles/upload/slider/third.jpg') }}" alt="second"/>
            </div>

        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
        </div>
        </div>
    <!-- find Carousel -->
    <div class="articles">
        {% for article in articles  %}
        <div class="row">
            <div class="col-lg-10">
                <div class="post col-lg-10">
                    <h2>{{ article.getArticleTitre() }}</h2>
                    <p class="post-content-meta">
                        <span class="post-tags">
                            <a href="#">
                                <span class="label label-info">{{ article.getArticleCategorie().getTitre() }}</span>
                            </a>
                        </span>
                        <span class="post-author"> // <i class="icon-user"></i> <a href="#">{{ article.getArticleAuteur().getPrenom() }}</a></span>
                        <span class="post-date"> // <i class="icon-calendar"></i>{{ article.getArticleDate()|date("d M \\a\\ H\\hm")  }}</span>
                    </p>
                    <div class="col-lg-3">
                        {% if article.getArticleVignette() == null %}
                            <img class="img-thumbnail" src="{{ asset('bundles/tgw/image/imgnewbase.png') }}" />
                        {% else %}
                            <img class="img-thumbnail" src="{{ asset(article.getArticleVignette) }}" />
                        {% endif %}
                    </div>
                    <p>{{ article.getArticleSynopsis() }}</p>
                    <a href="{{ path('blog_article_show', { 'id': article.getId }) }}">Read more Â»</a>
                </div>
            </div>
        </div>
        <hr class="alt"/>
        {% endfor %}
    </div>

{% endblock %}